{
  "manifest_version": 2,

  "name": "Web Element Watcher",
  "description": "A element watcher for any websites in the world.",
  "version": "0.0.1",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "options_page": "options/options.html",

  "icons": {
    "200": "icon.png"
  },

  "commands": {
    "toggle-panel": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Toggle panel"
    }
  },

  "permissions": [
    "contextMenus",
    "storage",
    "http://*/*",
    "https://*/*"
  ],

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches": ["http://*/*","https://*/*"],
    "js": ["xpath.js", "dialog.js", "content.js"],
    "css": ["content.css"],
    "run_at": "document_end"
  }],

  "web_accessible_resources": [
    "add/*",
    "options/*",
    "dist/*"
  ]
}
